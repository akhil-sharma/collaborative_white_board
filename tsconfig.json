{
  "compilerOptions": {
    "baseUrl": ".",                   // Base URL for resolving modules
    "paths": {
      "@shared/*": ["shared/*"]       // Alias for the shared folder
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true
  },
  "include": ["shared/**/*"]
}